 @font-face
   font-family PTSans
   font-style normal
   src url(fonts/PTSans/ptsansnarrow.woff2)
   
 @font-face
   font-family PTSans
   font-style bold
   src url(fonts/PTSans/ptsansnarrowbold.woff2)
   
*, *::before, *::after
	box-sizing: inherit

.clearfix
	content ""
	display table
	clear both
	
html
	box-sizing: border-box
	background: #000 url("../img/bg.png") center
	font 16px PTSans, sans-serif
	
.container
	width 960px
	padding 0 10px
	margin 0 auto
	
.main-header
	background #000
	margin-bottom 60px
	.main-navigation
		width 780px
		float left
		ul 
			margin 0
			padding 0
			list-style none
			font-size 0
			li 
				display inline-block
				a
					display block 
					text-decoration none
					padding 25px 20px
					background #000
					font-size 16px
					font-weight bold
					line-height 20px
					text-transform uppercase
					color #fff
					&:hover
						background #242424
				
	.user-block
		float right
		position relative
		.login-link
			display block
			text-decoration none
			padding 25px 25px 25px 50px
			background #000
			font-size 16px
			font-weight bold
			line-height 20px
			text-transform uppercase
			color #fff
			text-align right
			&:hover
				background #242424
			&:before
				content ""
				background url("../img/icon-login.png")
				position absolute
				width 18px
				height 16px
				top 26px
				left 20px
				opacity 0.3
			&:hover:before
				opacity 1
				
main
	.index-logo
		width 368px
		height 204px
		margin 0 auto
		margin-bottom 25px
	.features
		margin-bottom 80px
		.features-item
			float left
			width 300px
			outline 1px solid red
			min-height: 170px
			margin-right 20px
			&:nth-child(3n)
				margin-right 0
	.index-content
		padding 50px 80px
		margin-bottom 35px
		background #c3c3c3
		width 100%
		.index-content-left
			min-height 300px
			float left
			width 380px
			outline 1px solid red
		.index-content-right
			min-height 300px
			float right
			width 300px
			outline 1px solid red

.main-footer
	margin-top 65px
	padding-top 60px
	padding-bottom 40px
	background #000 url("../img/footer-bg.png")
	.footer-contacts
		float left
		width 320px
		margin-right 60px
		outline 1px solid red
		min-height 70px
	.footer-social
		float left
		width 180px
		outline 1px solid red
		min-height 70px
	.footer-copyright
		float right
		width 180px
		outline 1px solid red
		min-height 70px
		










